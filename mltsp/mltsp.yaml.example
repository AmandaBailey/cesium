flask:
    secret-key: abc01234  # This secret key can be any random string of
                          # characters.  Typically ``os.urandom(24)`` is
                          # good enough.

authentication:
    # The Stormpath API keys can be downloaded from:
    # https://api.stormpath.com

    stormpath_api_key_id: 01234
    stormpath_api_key_secret: 0124
    stormpath_application: mltsp

    ## This section is optional.  If not filled in, Google Authentication
    ## will be disabled.
    ##
    ## These values can be obtained from
    ##   https://console.developers.google.com/project
    ##
    ## When filling in the form for running on localhost:
    ##
    ## - Appliation type: Web
    ## - Authorized JavaScript origins: blank
    ## - Authorized redirect URIs: http://localhost:5000/google
    ##                             http://your.hosted.server.com
    ##
    ## Always include the localhost:5000 for unit testing purposes.

    google_client_id:
    google_client_secret:

paths:
    ## Two special variables are available below:
    ## - {project_path} : location of the MLTSP package
    ## - {package_path} : location of the mltsp package content
    data_path:        ~/.local/mltsp
    err_log_path:     ~/.local/mltsp/logs/errors_and_warnings.log
    sample_data_path: ~/.local/mltsp/sample_data
    models_folder:    ~/.local/mltsp/classifier_models
    features_folder:  ~/.local/mltsp/extracted_features

    upload_folder:    ~/.local/mltsp/flask_uploads
    custom_feature_script_folder: ~/.local/mltsp/flask_uploads/custom_feature_scripts

    project_path: '{project_path}'
    package_path: '{package_path}'
    tmp_custom_feats_folder: '{package_path}/custom_feature_scripts'

    # This is slated for deprecation
    project_path_link: /tmp/mltsp_link


celery:
    celery_broker: amqp://guest@localhost//

    ## The variables below are used by Celery itself
    CELERY_RESULT_BACKEND: amqp
    CELERY_TASK_SERIALIZER: pickle
    CELERY_RESULT_SERIALIZER: pickle
    CELERY_ACCEPT_CONTENT:
        - pickle
    CELERY_IMPORTS:
        - mltsp
        - celery_tasks
    INSTALLED_APPS:
        - mltsp

database:
    host: localhost
    port: 28015

